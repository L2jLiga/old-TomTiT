@charset "UTF-8";
/*
 * Основной шрифт главной страницы
 */
@font-face
{
	font-family: navtext;
	src: url("fonts/HelveticaNeueCyr-Light.eot");
	src: local("HelveticaNeueCyr"),
	url("fonts/HelveticaNeueCyr-Light.woff2") format("woff2"),
	url("fonts/HelveticaNeueCyr-Light.woff") format("woff"),
	url("fonts/HelveticaNeueCyr-Light.ttf") format("truetype"),
	url("fonts/HelveticaNeueCyr-Light.otf") format("opentype"),
	url("fonts/HelveticaNeueCyr-Light.eot") format("embedded-opentype");
}

/*
 * Кроссбраузерной, *** Chrome
 */
*
{
	-webkit-margin-before: 0;
	-webkit-margin-after: 0;
	font-family: navtext;
}

/*
 * Общие настройки
 */
body
{
	margin: 0 auto;
	width: 1024px;
}
a
{
	text-decoration: none;
	color: black;
}

/*
 * Панель навигации
 */
nav
{
	position: fixed;
	top: 0;
	height: 48px;
	text-align:left;
	width: 1024px;
}

nav > a
{
	display: inline-block;
	padding: 15px 10px;
	font-size: 14px;
	box-sizing: border-box;
	display: inline-block;
	margin-right: -4px;
	background-image: linear-gradient(to right, RGBA(255,218,68,0) 0%, RGBA(255,255,255,0.5) 50%, RGBA(255,218,68, 0) 100%);
}

nav > a:hover
{
	background: linear-gradient(to right, RGBA(0,0,0,0) 0%, RGB(255,218,68) 50%, RGBA(0,0,0,0) 100%);
}

nav > div
{
	vertical-align: top;
	display: inline-block;
}

nav > div > a
{
	display: block;
	font-size: 0;
	box-sizing: content-box;
	width: 121px;
	height: 96px;
	background-color: white;
	background-image: url("logo.png"),
	linear-gradient(to bottom, RGBA(255,218,68,0.4) 0%, RGBA(255,218,68,0.1) 25%, RGBA(255,218,68,0.1) 75%, RGBA(255,218,68, 0.5) 100%),
	linear-gradient(to right, RGBA(255,218,68,0.4) 0%, RGBA(255,218,68,0.1) 25%, RGBA(255,218,68,0.1) 75%, RGBA(255,218,68, 0.4) 100%)
	;
	background-size: 121px 96px, 100%, 100%;
	background-repeat: no-repeat;
	background-position: 50%;
	padding: 10px 50px;
}

nav > div::before
{
	content: '';
	position: fixed;
	top: 0;
	width: 221px;
	height: 100%;
	background: #ffe98f;
	z-index: -100;
}

nav::before,
nav:before
{
	content: '';
	display: block;
	height: 46px;
	width: 803px;
	position: fixed;
	left: 221px;
	right: 0;
	top: 0;
	margin: 0 auto;
	background: #ffe98f;
	z-index: -15;
}

/*
 * Основной контент сайта
 */
main
{
	margin-top: 75px;
	text-align: center;
	width: 803px;
	margin-left: 221px;
}

main > h1
{
	margin-bottom: 30px;
}

/*
 * Настройка подпунктов меню
 */
main > section
{
	margin-top: 30px;
	width: inherit;
	text-align: center;
}

main > section > :not(h1)
{
	padding-left: 15px;
}

main > section > h1
{
	display: block;
	background: linear-gradient(135grad, #ffe98f 0%, rgba(255, 233, 143, 0.5) 50%, #ffe98f 100%);
	padding: 5px 0;
	margin: 0 0 15px;
}

main > section > div
{
	display: inline-block;
	counter-reset: item;
}

main > section > div > p
{
	text-align: left;
}

main > section > div > p > i
{
	display: inline-block;
	width: 200px;
}

main > section > div > a::before
{
	content: counter(item) ". ";
}

main > section > div > a
{
	counter-increment: item;
	display: block;
	text-align: left;
	margin-bottom: 3px;
}

/*
 * Подвал сайта
 */
footer
{
	position: fixed;
	bottom: 0;
	font-size: 16px;
	padding: 25px;
	background: linear-gradient(to bottom,RGBA(255,218,68,0.4) 0%, RGBA(255,218,68,0.15) 25%, RGBA(255,218,68,0.1) 75%, RGBA(255,218,68, 0.5) 100%),
	linear-gradient(to right,RGBA(255,218,68,0.5) 0%, RGBA(255,218,68,0.15) 25%, RGBA(255,218,68,0.1) 75%, RGBA(255,218,68, 0.5) 100%);
	width: 1024px;
	box-sizing: border-box;
	z-index:5;
}
#footerwrap
{
	position: fixed;
	height: 67px;
	width: 1024px;
	left: 0;
	right: 0;
	bottom: 0;
	margin: 0 auto;
	background: white;
	z-index: 4;
}
main::after
{
	content: '';
	display: block;
	margin-bottom: 80px;
}